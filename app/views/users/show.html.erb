<div class="main user-show">
  <div class="container">
    <div class="user">

      <h2><%= @user.name %></h2>
      <br>
      【紹介文】 
      <p><%= @user.profile%></p>
      
      <% if @user.id == current_user.id %>
        <%=link_to '編集',edit_user_path %>
      <% end %>
      
      
      <div>
      <%= @user.name %>さんの投稿履歴
      </div>
      
      <% @posts = @user.posts.all.order(updated_at: :desc) %>
      
      <% @posts.each do |post| %>
      <div class="posts-index-item">
        
        <div class="post-left">
        </div>
        <div class="post-right">
          <div class="post-user-name">
          </div>
          <%= link_to(post.content, "/posts/#{post.id}") %>
        </div>
      </div>
    
      <% end %>
      <%= link_to 'いいね履歴（メモ）',"/users/#{@user.id}/likes" %>
      
    </div>
  </div>
</div>