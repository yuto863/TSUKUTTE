<div class="main users-new">
  <div class="container">
    <div class="form-heading">ユーザー情報の編集</div>
    <%= form_with model: @user, local: true do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
      <div class="form users-form">
        <center>
        <% if @user.image? %>
          <%= image_tag @user.image.url %>
        <% else %>
          <%= image_tag "/assets/default.jpg", :size => '100x100' %>
        <% end %>
        
        <br>
        <br>
        <button type="button">
           <%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png' %>
        </button>
        </center>
        
        <div class="form-body">
          <%= f.label :name, 'ユーザー名' %>
          <%= f.text_field :name %>
          
          <%= f.label :profile, 'プロフィール' %>
          <%= f.text_area :profile, placeholder: '紹介文を入力してください' %>
          
          
          
        　
          
          
          <%= f.submit "編集する"%>
        
        <%= link_to "退会を希望される方はこちら",users_destroy_confirm_path %>
        
        </div>
        
      </div>
    <% end %>
  </div>
</div>

