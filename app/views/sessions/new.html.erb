<div class="main users-new">
  <div class="container">
    <div class="form-heading">ログイン</div>
    <%= form_with scope: :session, url:login_path, local: true do |f| %>
      <div class="form users-form">
        <div class="form-body">
          <%= f.label :email, 'メールアドレス' %>
          <%= f.text_field :email %>
          <%= f.label :password, 'パスワード' %>
          <%= f.password_field :password , placeholder: '8文字以上12文字以内(半角英数字それぞれ１文字以上含む)' %>
          
          <%= f.label :remember_me, class: "checkbox inline" do %>
            <%= f.check_box :remember_me %>
            
            <span>パスワードを保存する</span>
          <% end %>
          <br>
          <br>
          <%= link_to '新規登録はこちら', new_user_path %>
          <%= f.submit 'ログイン' %>
        </div>
      </div>
    <% end %>
  </div>
</div>