<div class="main posts-index">
  
    
  
    
    
  <div class="container">
    
    <i class="material-icons">
     trending_up
    </i>
    トレンド
    <%= render 'layouts/index_header' %>
    
    <h1 class="form-heading">最新の投稿</h1>
