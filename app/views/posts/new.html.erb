<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">投稿する</h1>
    <%= form_with model: @post, local: true do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      <div class="form">
        <div class="form-body">
          <%= f.label :title, 'タイトル' %>
          <%= f.text_field :title %>
          <%= f.label :content, '内容' %>
          <%= f.text_area :content %>
          <%= f.submit "投稿する"%>
        </div>
      </div>
    <% end %>
  </div>
</div>